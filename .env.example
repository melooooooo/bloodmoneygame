# BloodMoney Comments System Environment Variables
# Copy this file to .env and fill in your values

# GitHub Configuration (for Worker only, not frontend)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_OWNER=melooooooo
GITHUB_REPO=bloodmoneygame
GITHUB_BRANCH=main

# Cloudflare Worker Configuration
WORKER_URL=https://bloodmoney.ink/api
# For local development:
# WORKER_URL=http://localhost:8787/api

# Cloudflare Pages Build Configuration
NODE_VERSION=18
BUILD_ENV=production

# Security Configuration
ALLOWED_ORIGIN=https://bloodmoney.ink
# For local development:
# ALLOWED_ORIGIN=*

# Rate Limiting (optional)
RATE_LIMIT_MINUTES=1
MAX_COMMENTS_PER_HOUR=10

# IMPORTANT NOTES:
# 1. NEVER commit the .env file with real values to Git
# 2. The GITHUB_TOKEN should only be set in Cloudflare Worker secrets
# 3. For Cloudflare Pages, set these in the dashboard, not in files
# 4. Use 'wrangler secret put GITHUB_TOKEN' to set the token securely